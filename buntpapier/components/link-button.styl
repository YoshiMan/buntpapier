$button-height = 36px

link-button()
	.{$prefix}-link-button
		display: inline-flex
		background-color: $clr-grey-200
		text-decoration: none
		color: $clr-primary-text-light

link-button-style(color = $clr-grey-200, text-color = lightness(color) < 60% ? $clr-primary-text-dark : $clr-primary-text-light)
	color: text-color

	_flat-button-color(color)

	&.autofocus:focus,
	body[modality="keyboard"] &:focus
		outline-width: 2px
		outline-offset: 2px

	.{$prefix}-ripple-ink .ripple.held
		opacity: 0.7
