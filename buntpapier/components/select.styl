select()
	.{$prefix}-select
		position relative
		.open-indicator
			position absolute
			right 4px
			color $clr-secondary-text-light
			font-size 28px
			line-height 20px
			top: 8px
			transition all 0.25s ease-in-out
			cursor pointer
		&.open .open-indicator
			transform-origin: center
			transform rotate(180deg)
		.bunt-input input
			box-sizing border-box
			padding-right 20px
	.{$prefix}-select-dropdown-menu
		card()
		border-top none
		border-radius 0 0 2px 2px
		// overflow-y: scroll
		// overflow-x: hidden
		z-index: 100
		ul
			margin: 0
			padding: 0


		li
			list-style-type none
			height 32px
			line-height 32px
			text-overflow ellipsis
			white-space nowrap
			&.highlight
				background-color $highlight-color


select-style(size = 'dense')
	.bunt-input
		input-size(size)
	if size is 'large'
		.open-indicator
			top: 16px
