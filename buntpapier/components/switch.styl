switch()
	.bunt-switch
		cursor pointer
		position relative
		display flex
		height 20px
		margin-bottom 8px
		flex-shrink 0
		input
			position absolute
			cursor inherit
			pointer-events all
			opacity 0
			width 100%
			height 100%
			z-index 2
			left 0
			box-sizing border-box
			padding 0
			margin 0
		label
			font-size 14px
			line-height 14px
		.bunt-switch-track
			height 14px
			width 36px
			border-radius 30px
			background-color $clr-disabled-text-light
			margin-right 8px
			position relative
			transition all .4s ease-out
		.bunt-switch-thumb
			height 20px
			width 20px
			background-color $clr-grey-50
			border-radius 50%
			position absolute
			left 0
			top 50%
			transform translate3d(-1px, -50%, 0px)
			transition all .3s ease
			z-depth-1dp()
			
		&.checked
			.bunt-switch-track
				background-color alpha($clr-primary, .5)
			.bunt-switch-thumb
				background-color $clr-primary
				transform translate3d(75%, -50%, 0px)
				z-depth-2dp()
