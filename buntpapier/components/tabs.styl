tabs()
	.bunt-tabs
		width 100%
		margin-bottom 24px

		&.fullwidth
			.ui-tab-header-item
				flex-grow: 1

		&.raised
			border: none
			box-shadow: 0 0 2px alpha(black, 0.12), 0 2px 2px alpha(black, 0.2)

			.bunt-tabs-body
				border: none

	.bunt-tabs-header
		position: relative
		width: 100%
			
		.bunt-tab-header-item .ui-ripple-ink .ripple.held
				opacity: 0.7

	.bunt-tabs-header-items
		position: relative
		display: flex
		list-style: none
		margin: 0
		padding: 0

	// .bunt-tabs-body
	// 	background-color: white
	// 	border-radius: 0
	// 	border: 1px solid $clr-grey-200
	// 	border-top: 0
	// 	padding: 16px
	// 	margin: 0

	.bunt-tab
		outline: none
	// tab header
	.bunt-tab-header-item {
		font-family: $font-stack;
		position: relative;

		display: flex;
		height: 48px;
		padding: 0 12px;
		text-transform: uppercase;

		align-items: center;
		justify-content: center;

		cursor: pointer;
		min-width: 80px;

		&.type-icon-and-text {
			display: flex;
			flex-direction: column;
			height: 72px;

			.bunt-tab-header-item-icon {
				margin-bottom: 4px;
				margin-bottom: 4px;
			}
		}

		&.disabled {
			opacity: 0.4;
			cursor: default;
		}
	}

	// .bunt-tab-header-item-text {
