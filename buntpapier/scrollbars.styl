$rail-width = 15px
$thumb-width = 6px
$thumb-width-hovered = 12px

scrollbars()
	.bunt-scrollbar
		position: relative
		overflow: hidden

		&:hover
			.bunt-scrollbar-thumb
				opacity: .4
		.bunt-scrollbar-inner
			width: 100%
			height: 100%
			box-sizing: border-box
			overflow: scroll

			&::-webkit-scrollbar
				display: none

		&.bunt-scrollbar-non-webkit .bunt-scrollbar-inner
			flex: 1 0 auto // force height when inside a flexbox

		.bunt-scrollbar-rail-x,
		.bunt-scrollbar-rail-y
			position: absolute
			user-select: none

		.bunt-scrollbar-thumb
			position: absolute
			background-color: $clr-blue-grey-600
			opacity: .2
			border-radius: $thumb-width
			transition: height .3s $material-easing, width .3s $material-easing, opacity .3s $material-easing

		.bunt-scrollbar-rail-x
			bottom: 0
			left: 0
			right: 0
			height: $rail-width

			.bunt-scrollbar-thumb
				bottom: 2px
				height: $thumb-width

			&:hover, &.active
				.bunt-scrollbar-thumb
					height: $thumb-width-hovered
					opacity: .8
		.bunt-scrollbar-rail-y
			top: 0
			bottom: 0
			right: 0
			width: $rail-width

			.bunt-scrollbar-thumb
				right: 2px
				width: $thumb-width
			&:hover, &.active
				.bunt-scrollbar-thumb
					width: $thumb-width-hovered
					opacity: .8
